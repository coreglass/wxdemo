/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  display: flex;
  flex-direction: column;
  width: 400rpx;
  height: 60rpx;
  margin: 200px auto;
  border: 1px solid  #d9eaff;
  border-radius: 5px;
}
.user-motto{
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
  line-height: 60rpx;
}